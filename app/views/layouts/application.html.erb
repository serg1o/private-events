<!DOCTYPE html>
<html>
<head>
  <title>PrivateEvents</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <% flash.each do |message_type, message| %>
    <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
<!-- the above line is equal to: -->
<!-- <div class="alert alert-<%= message_type %>"><%= message %></div> -->
    <% end %>
     <% if logged_in? %>
       <p>Hello <%= current_user.name %>!</p>
       <%= link_to "My Profile", current_user %>
       <%= link_to "Log out", logout_path, method: "delete" %></br>
       <%= link_to "Create new event", new_event_path %>
    
     <% else %>
       <%= link_to "Log in", login_path %>
       <%= link_to "Sign up now!", new_user_path %>
     <% end %></br></br>
     <%= link_to "Home", root_url %>
     <%= link_to "View all users", users_path %>

     <%= link_to "View all events", events_path %>
     <%= yield %>


  </div>

</body>
</html>
